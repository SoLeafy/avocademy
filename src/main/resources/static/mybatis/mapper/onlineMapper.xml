<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.avocado.web.repository.OnlineDAO">
	
	<select id="online" resultType="com.avocado.web.entity.OnlineDTO">
		SELECT bno, btitle, bcontent, bdate, secret, commentYN, bdel FROM online
	</select>
	
	<select id="detail" parameterType="int" resultType="OnlineDTO"> 
		SELECT bno,
		btitle, bcontent, bdate
		FROM online
		WHERE bno=#{bno} 
	</select>
	
</mapper>